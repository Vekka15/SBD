<body class="matches">

<%= form_for @change_match do |m| %>
<%if @match.errors.any? %>
<% @match.errors.each do |attr,msg|  %>
<div class="message-box"><%=msg%></div>
<% end %>
<%end %>
  <% flash.clear %>
  <%= m.label "Czas" %><br>
  <%= m.text_field :time, class: "input-style" %>
  <%= m.label "Miejsca(liczba)" %><br>
  <%= m.text_field :seats_number, class: "input-style" %>
  <%= m.label "Nagroda" %><br>
  <%= m.text_field :price, class: "input-style" %>
  <%= m.label "Nazwa gry" %><br>
  <%= m.text_field :game_name, class: "input-style" %>
  <%= m.label "Nazwa zjazdu" %><br>
  <%= m.text_field :convention_name, class: "input-style" %>

  <%= m.submit "Accept", class: 'submit-style'%>

<%end%>

</body>
